<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:local="clr-namespace:PopupMaui"
             x:Class="PopupMaui.MainPage">

    <ContentPage.Behaviors>
        <local:Behavior/>
    </ContentPage.Behaviors>

    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="displaybutton" Margin="10" Text="Display Popup"/>
            <popup:SfPopup x:Name="sfPopup" ShowFooter="True" ShowCloseButton="True"
                           AnimationDuration="1000" AnimationMode="SlideOnRight">
                
            </popup:SfPopup>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
